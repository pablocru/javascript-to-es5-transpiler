---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"textarea"> {
  body: string;
}

const { body, ...props } = Astro.props;
---

<textarea rows="10" cols="55" {...props}>{body}</textarea>

<style>
  textarea {
    font-family: "IBM Plex Mono", monospace;

    /* font size inside textarea will be as big as body's font size */
    font-size: 1rem;
  }
</style>
